{
  "name": "rip-sdk-ts",
  "version": "0.0.0-dev",
  "private": true,
  "description": "TypeScript SDK for RIP (wraps the `rip` binary and parses JSONL event frames).",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "clean": "rm -rf dist *.tsbuildinfo",
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "npm run build && node --test dist/**/*.test.js"
  },
  "devDependencies": {
    "@types/node": "20.19.18",
    "typescript": "5.9.2"
  }
}
